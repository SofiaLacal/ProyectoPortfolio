<!-- Header -->
<header id="header">
  <div class="inner">
    <a class="image avatar"><img src="/assets/css/images/panda-logo.jpg" alt="Logo PandaPixel Studio" /></a>
    <h1><strong>PandaPixel Studio</strong><br/>
    Creatividad, diseño y desarrollo a tu medida.</h1>
  </div>
  <div class="inner">
		<h1><strong>El equipo: </strong></h1>
		<p>
			Conoce algo más sobre nosotros. Entra en cada perfil y conócenos.
    </p>
    <div>
      <a href="/portfolioLaura" class="image avatar nosotros"><img src="/assets/css/images/laura.jpg" alt="Laura" /></a>
      <a href="/portfolioPablo" class="image avatar nosotros"><img src="/assets/css/images/pablo.jpg" alt="Pablo" /></a>
      <a href="/portfolioJavier" class="image avatar nosotros"><img src="/assets/css/images/javi.jpg" alt="Javier" /></a>
    </div>
  </div>
</header>

<!-- Main -->
<div id="main">
  <!-- Perfil -->
  <section>
    <div class="perfil-sofia">
      <img src="/assets/css/images/sofia.jpg" class="image avatar nosotros" alt="Sofia" />
      <div class="perfil-content">
        <header class="major">
          <h2 class="color-texto-sofia">{{miembro.nombre}} {{miembro.apellidos}}</h2>
        </header>
        <p>{{miembro.descripcion}}</p>
        {{#if miembro.linkedin}}
          <ul class="actions">
            <li><a href="{{miembro.linkedin}}" target="_blank" class="button icon brands fa-linkedin">LinkedIn</a></li>
            {{#if miembro.github}}
              <li><a href="{{miembro.github}}" target="_blank" class="button icon brands fa-github">GitHub</a></li>
            {{/if}}
          </ul>
        {{else if miembro.github}}
          <ul class="actions">
            <li><a href="{{miembro.github}}" target="_blank" class="button icon brands fa-github">GitHub</a></li>
          </ul>
        {{/if}}
    </div>
  </section>

  <!-- Idiomas -->
  <section id="idiomas">
    <h2 class="color-texto-sofia">Idiomas</h2>
    <ul>
      {{#each idiomas}}
        <li>{{idioma}} - {{nivel}}</li>
      {{/each}}
    </ul>
  </section>

  <!-- Tecnologías -->
  <section id="tecnologias">
    <h2 class="color-texto-sofia">Tecnologías</h2>
    <ul class="tecnologias-lista">
      {{#each tecnologias}}
        <li>{{nombre}} ({{nivel}})</li>
      {{/each}}
    </ul>
  </section>

  <!-- Proyectos -->
  <section id="proyectos">
    <h2 class="color-texto-sofia">Proyectos Personales</h2>
    <ul>
      {{#each proyectos}}
        <li>
          <strong>{{nombreProyecto}}</strong>: {{descripcion}}
          {{#if linkRepo}} - <a href="{{linkRepo}}" target="_blank">Repo</a>{{/if}}
        </li>
        <br>
      {{/each}}
    </ul>
  </section>
</div>

<!-- Footer -->
<footer id="footer">
  <div class="inner">
    <ul class="icons">
      <li><a href="/" class="icon solid fa-home"><span class="label">Home</span></a></li>
    </ul>
  </div>
</footer>

